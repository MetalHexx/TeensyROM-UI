{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node ./.claude/hooks/angular-nx-quality/quality-check.cjs $FILE_PATH",
            "description": "Run TeensyROM quality checks (TypeScript, ESLint, Prettier) on modified files"
          }
        ]
      }
    ]
  }
}
