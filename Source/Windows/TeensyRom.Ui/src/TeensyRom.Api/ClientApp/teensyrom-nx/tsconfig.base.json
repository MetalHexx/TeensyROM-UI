{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@teensyrom-nx/api-client": ["libs/api-client/src/index.ts"],
      "@teensyrom-nx/app-shell": ["libs/app/shell/src/index.ts"],
      "@teensyrom-nx/app/bootstrap": ["libs/app/bootstrap/src/index.ts"],
      "@teensyrom-nx/device-features": ["libs/features/devices/src/index.ts"],
      "@teensyrom-nx/device-store": ["libs/domain/devices/state/src/index.ts"],
      "@teensyrom-nx/domain/devices/services": ["libs/domain/devices/services/src/index.ts"],
      "@teensyrom-nx/navigation": ["libs/services/navigation/src/index.ts"],
      "@teensyrom-nx/ui-components": ["libs/ui-components/src/index.ts"],
      "@teensyrom/ui-styles": ["libs/ui-styles/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
