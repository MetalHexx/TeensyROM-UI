{
  "name": "teensyrom-ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/teensyrom-ui/src",
  "tags": [],
  "implicitDependencies": [
    "device-features",
    "device-services",
    "device-store",
    "ui-styles",
    "app-shell"
  ],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/teensyrom-ui",
        "index": "apps/teensyrom-ui/src/index.html",
        "browser": "apps/teensyrom-ui/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/teensyrom-ui/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/teensyrom-ui/public"
          }
        ],
        "styles": ["apps/teensyrom-ui/src/styles.scss"],
        "scripts": [],
        "stylePreprocessorOptions": {
          "includePaths": ["libs/ui/styles/src/lib"]
        }
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "teensyrom-ui:build:production"
        },
        "development": {
          "buildTarget": "teensyrom-ui:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "teensyrom-ui:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/apps/teensyrom-ui"
      }
    },
    "test-ui-watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest --ui --watch",
        "cwd": "apps/teensyrom-ui",
        "color": true
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "teensyrom-ui:build",
        "port": 4200,
        "staticFilePath": "dist/apps/teensyrom-ui/browser",
        "spa": true
      }
    }
  }
}
