#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ› Entered Husky pre-commit hook"

cd Source/Windows/TeensyRom.Ui/src/TeensyRom.Api/ClientApp/teensyrom-nx || {
  echo "âŒ Failed to cd into Nx workspace directory"
  exit 1
}

# Run lint-staged if possible
if command -v npx >/dev/null 2>&1 && npx --version >/dev/null 2>&1; then
  echo "âœ… Running lint-staged with working npx"
  npx lint-staged || exit 1
else
  echo "âš ï¸  Skipping lint-staged â€” npx not available"
fi

# Ask user whether to run tests, defaulting to "yes" after 5 seconds
echo "â“ Do you want to run tests before committing? [Y/n] (auto-runs in 5s): "
read -r -t 5 run_tests

run_tests=${run_tests:-y} # default to 'y' if nothing entered

case "$run_tests" in
  [nN][oO]|[nN])
    echo "â­ï¸  Skipping tests"
    ;;
  *)
    echo "ğŸ§ª Running Tests..."
    npx nx run-many --target=test --all --watch=false --parallel=false || {
      echo "âŒ Unit tests failed. Commit aborted."
      exit 1
    }
    ;;
esac
